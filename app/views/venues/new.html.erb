<div class="container my-3">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-8 col-12 bg-light rounded p-4">
      <h2 class="text-center h3 mb-3 fw-bold">Novo Estabelecimento</h2>
      <p style="color: gray">
        Com este formulário você pode criar novos estabelecimentos a serem adicionados às postagens.
      </p>
      <%= simple_form_for(@venue) do |f| %>
        <%= f.input :name, label: 'Nome:' , error: 'Nome é obrigatório.', label_html: { class: 'fw-bold' } %>
        <%= f.input :address, label: 'Endereço:' , error: 'Endereço é obrigatório.', label_html: { class: 'fw-bold' } %>
        <%= f.input :capacity, label: 'Capacidade:' , error: 'Capacidade é obrigatória.', label_html: { class: 'fw-bold' } %>
        <%= f.input :website, label: 'Site:' , error: 'Site é obrigatório.', label_html: { class: 'fw-bold' } %>
        <div class="col-lg-6 col-12">
          <%= f.input :zone, collection: ['Zona Sul/Centro', 'Zona Oeste', 'Zona Norte'], label: 'Região:', label_html: { class: 'fw-bold' }, prompt: 'Escolha uma região:'  %>
        </div>
        <div class="d-grid gap-2 col-6 mx-auto my-4">
          <%= f.button :submit, 'Salvar estabelecimento', class: 'btn btn-success fw-bold' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
