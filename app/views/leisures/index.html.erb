<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-1 px-0">
      <%= render 'shared/sidebar' %>
    </div>
    <div class="col-11">

      <%= render 'banners/show' %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row" style="margin-top: 7rem; margin-right: 0; margin-left: 0;">
    <% @leisures.each do |leisure| %>
      <div class="filme col-12 col-m-12 col-lg-4 ">
        <div class="letreiro">
          <div class="foto-filme" style="background-image: url('<%= cl_image_path leisure.photo.key %>')"></div>
          <div class="infos-filme">
            <strong><%= leisure.title.upcase %></strong>
            <p> <% names = [] %>
                <% leisure.genres.each do |genre| %>
                  <% names << genre.name %>
                <% end %>
                <%= names.join(" / ") %>
              | dir. <%= leisure.director %> | <%= leisure.country? ? ISO3166::Country[leisure.country].alpha3 : "sem paÃ­s"  %> | <%= leisure.min_age.to_s %> | <%= leisure.duration %>  </p>
            <p id="horario"> <%=  calculate_date(leisure.start_date) %>/
              <%= (I18n.t :abbr_month_names, :scope => :date)[Leisure.last.start_date.month] %> |
              <%= leisure.time.hour %>h<%= leisure.time.min == 0 ? '00' : leisure.time.min %>
            </p>
            <a href="<% leisure.link %>"class="button-small">comprar ingresso</a>
          </div>
        </div>
        <div class="sinopse" data-controller="read-more" data-read-more-more-text-value="Ver mais" data-read-more-less-text-value="Ver menos">
          <p class="mb-0" data-read-more-target="content">
            <%= leisure.description %>
            <br>
            <strong>
                <% venues = [] %>
                <% leisure.venues.each do |venue| %>
                  <% venues << venue.name %>
                <% end %>
                <%= venues.join(" | ") %>
            </strong>
          </p>
          <% if leisure.description.length > 40%>
            <button class=" p-0" style="border: none; background: none" data-action="read-more#toggle">Ver Mais</button>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

</div>
