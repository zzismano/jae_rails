  <li>clique no + para criar</p>
  <li>clique no nome para editar</li>
</ul>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Evento <%= link_to "+", new_leisure_path%></th>
      <th scope="col">Estabelecimentos <%= link_to "+", new_venue_path%> </th>
      <th scope="col">Gêneros <%= link_to "+", new_genre_path%> </th>
      <th scope="col">Categoria <%= link_to "+", new_category_path%></th>
    </tr>
  </thead>
  <tbody>
    <% @leisures.each do |leisure|%>
    <tr>
      <td><%=link_to "#{leisure.title}", edit_leisure_path(leisure)%></td>
      <td>
        <% leisure.venues.each do |venue|  %>
          <% leisure_venue = LeisureVenue.where(leisure_id: leisure.id, venue_id: venue.id)[0]  %>
          <%=link_to "#{venue.name}", edit_venue_path(venue)%>
          <%= link_to "x", leisure_venue_path(leisure_venue), data: {turbo_method: :delete, turbo_confirm: "tem certeza?"} %>
        <% end %>
      </td>
      <td> <% if leisure.genres.empty? %>
          sem gênero
          <%else%>
            <%leisure.genres.each do |genre|  %>
              <%= link_to "#{genre.name}", edit_genre_path(genre) %>
              <% leisure_genre = LeisureGenre.where(leisure_id: leisure.id, genre_id: genre.id)[0]  %>
              <%= link_to "x", leisure_genre_path(leisure_genre), data: {turbo_method: :delete, turbo_confirm: "tem certeza?"} %>
            <% end %>
          <% end%>
      </td>
      <td><%=link_to "#{leisure.category.name}", edit_category_path(leisure.category)%></td>
    </tr>
    <%end%>
  </tbody>
</table>
