<div class="container my-3">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-8 col-12 bg-light rounded p-4">
      <h2 class="text-center h3 mb-3 fw-bold">Editar Categoria</h2>
      <%= simple_form_for @category do |f| %>
        <div class="form-group">

          <h3><%= @category.name %></h1>

          <%= f.fields_for :subcategories do |subform| %>
            <div class="nested-fields">
              <%= subform.input :name, label: 'Subcategoria' %>
              <%= subform.hidden_field :_destroy %>
              <%= link_to_remove_association "Remover", subform %>
            </div>
          <% end %>

          <%= link_to_add_association 'Adicionar Subcategoria', f, :subcategories, class: 'btn btn-primary' %>

        </div>

        <div class="form-group">
          <%= f.submit 'Salvar Categoria', class: 'btn btn-success' %>
        </div>
      <% end %>



    </div>
  </div>
</div>
