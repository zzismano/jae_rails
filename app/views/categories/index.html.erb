<div class="container my-3">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-8 col-12 bg-light rounded p-4">
      <h2 class="text-center h3 mb-3 fw-bold">Categorias</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Nome</th>
            <th scope="col">Subcategorias</th>
          </tr>
        <tbody>
          <% @categories.each do |category|%>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.subcategories %></td>
            </tr>
          <% end %>
    </div>
  </div>
</div>
